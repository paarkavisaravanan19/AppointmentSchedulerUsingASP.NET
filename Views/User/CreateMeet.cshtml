@model AppointmentApplication.Models.SchedulerModel
<h3>Create New Meeting</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateMeet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="emailID" class="control-label"></label>
                <input asp-for="emailID" class="form-control" />
                <span asp-validation-for="emailID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MeetingInfoDetails" class="control-label"></label>
                <input asp-for="MeetingInfoDetails" class="form-control" />
                <span asp-validation-for="MeetingInfoDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MeetingInfoBrief" class="control-label"></label>
                <input asp-for="MeetingInfoBrief" class="form-control" />
                <span asp-validation-for="MeetingInfoBrief" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FromDateTime" class="control-label"></label>
                <input asp-for="FromDateTime" class="form-control" />
                <span asp-validation-for="FromDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDateTime" class="control-label"></label>
                <input asp-for="ToDateTime" class="form-control" />
                <span asp-validation-for="ToDateTime" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>